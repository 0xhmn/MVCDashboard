<div>
	<p>
	</p>
	<div ng-controller="baseWidgetController">
		<h3>Current Program Status</h3>
		<ul>
			<li>current program id: {{ data1.program }}</li>
			<li>current term id: {{ data1.term }}</li>
		</ul>

		<hr><!--<input type="text" ng-model="data1.text"/>-->

		<p>Select a Program to Start</p>
    <select class="form-control"
            ng-model="data1.programId"
            ng-options="p.id as p.name for p in programs"
            ng-change="generateTerms(data1.programId)">
      <option value="">--Select a Program--</option>
    </select>
    <hr />
	  {{programs}}
		<hr/>
		<p>collection of terms for this program:</p>
		{{terms}}
		<hr/>
    <p>Select a Term</p>
	  <select class="form-control"
	          ng-disabled="!terms[0]"
	          ng-model="data1.termId"
	          ng-options="t.id as t.name for t in terms">
      <option value="">--Select a Term--</option>
	  </select><br>

	</div>
</div>
